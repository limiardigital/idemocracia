{
  "version": "2.0",
  "app_name": "idemocracia-api",
  "api_gateway_endpoint_type":"EDGE",
  "automatic_layer": true,  
  "stages": {
    "local": {
      "environment_variables": {
        "APP_NAME": "idemocracia-api-local",
        "API_URL": "http://127.0.0.1:8000",
        "VERSION": "1.0.0",
        "DB_HOST": "127.0.0.1",
        "DB_PORT": "5432",
        "DB_NAME": "idemocracia",
        "DB_USER": "postgres",
        "DB_PASSWORD": "postgres"
      }
    },
    "dev": {
      "autogen_policy": true,
      "api_gateway_stage": "dev",
      "api_gateway_custom_domain": {
        "domain_name": "api.idemocracia.digital",
        "url_prefix": "dev",
        "security_policy": "TLS 1.2",
        "certificate_arn": "<CERTIFICATE_ARN>"
      },
      "environment_variables": {
        "APP_NAME": "idemocracia-api-dev",
        "API_URL": "https://api.idemocracia.digital/dev",
        "VERSION": "1.0.0",
        "DB_HOST": "<HOST>",
        "DB_PORT": "<PORT>",
        "DB_NAME": "idemocracia",
        "DB_USER": "<USER>",
        "DB_PASSWORD": "<PASSWORD>"
      }
    },
    "prod": {
      "autogen_policy": true,
      "api_gateway_stage": "prod",
      "api_gateway_custom_domain": {
        "domain_name": "api.idemocracia.digital",
        "url_prefix": "prod",
        "security_policy": "TLS 1.2",
        "certificate_arn": "<CERTIFICATE_ARN>"
      },
      "environment_variables": {
        "APP_NAME": "idemocracia-api-prod",
        "API_URL": "https://api.idemocracia.digital/prod",
        "VERSION": "1.0.0",
        "DB_HOST": "<HOST>",
        "DB_PORT": "<PORT>",
        "DB_NAME": "idemocracia",
        "DB_USER": "<USER>",
        "DB_PASSWORD": "<PASSWORD>"
      }
    }
  }  
}